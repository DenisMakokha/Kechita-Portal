{
  "name": "@kechita/api",
  "version": "0.2.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "prisma:push": "prisma db push --schema ../../packages/db/prisma/schema.prisma && prisma generate --schema ../../packages/db/prisma/schema.prisma",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "dependencies": {
    "@kechita/common": "workspace:*",
    "@kechita/db": "workspace:*",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.13",
    "pdf-lib": "^1.17.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "prisma": "^5.18.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
